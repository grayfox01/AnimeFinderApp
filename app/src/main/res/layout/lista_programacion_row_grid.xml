<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_width"
    android:layout_height="@dimen/image_width"
    android:elevation="5dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp" >

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imagenProgramacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary_overlay" >

            <TextView
                android:id="@+id/tituloProgramacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="5dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/capitulosProgramacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/verProgramacion"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_width"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/animeProgramacion"
                android:layout_toEndOf="@+id/animeProgramacion"
                android:background="@drawable/ic_play_circle_outline_white_48dp" />

            <Button
                android:id="@+id/animeProgramacion"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_width"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_folder_open_white_48dp" />

            <Button
                android:id="@+id/descargarProgramacion"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_width"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/animeProgramacion"
                android:layout_toStartOf="@+id/animeProgramacion"
                android:background="@drawable/ic_file_download_white_48dp" />
        </RelativeLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>