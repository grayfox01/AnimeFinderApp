<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width"
    android:layout_height="@dimen/image_width"
    android:elevation="5dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/material_grey_100"
    app:cardCornerRadius="10dp" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/listaAnimeImagen1"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width" >

            <ImageView
                android:id="@+id/listaAnimeImagen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/loadimage" />

            <ImageView
                android:id="@+id/isVisto"
                android:layout_width="@dimen/button_width2"
                android:layout_height="@dimen/button_width2"
                android:layout_gravity="bottom|right"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_done_white_48dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_width"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/listaAnimeImagen1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/listaAnimeTitulo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_2"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:padding="10dp"
                android:text="Titulo"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/listaAnimeDescripcion"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_width_2"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="3"
                android:padding="10dp"
                android:text="Descripcion"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>