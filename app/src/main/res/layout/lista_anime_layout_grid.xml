<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/image_width"
    android:layout_height="@dimen/image_width"
    android:elevation="5dp"
    android:padding="10dp"
    app:cardCornerRadius="10dp" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/listaAnimeImagen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary_overlay"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/listaAnimeTitulo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.36"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="5dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:text="Titulo"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/listaAnimeDescripcion"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.56"
                android:ellipsize="end"
                android:maxLines="4"
                android:padding="5dp"
                android:shadowColor="@android:color/black"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="3"
                android:text="Descripcion"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white" />
        </LinearLayout>
        
        <ImageView
            android:id="@+id/isVisto"
            android:layout_width="@dimen/button_width2"
            android:layout_height="@dimen/button_width2"
            android:layout_gravity="bottom|right"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_done_white_48dp" />

    </FrameLayout>

</android.support.v7.widget.CardView>