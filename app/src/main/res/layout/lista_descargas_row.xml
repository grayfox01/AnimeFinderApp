<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.animefinderapp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/material_grey_100"
    app:cardCornerRadius="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imagenDescargas1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_folder_open_black"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/tituloDescargas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imagenDescargas1"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/descripcionDescargas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tituloDescargas1"
            android:layout_toRightOf="@+id/imagenDescargas1"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</android.support.v7.widget.CardView>